<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.nu.taxidriver.RegisterActivity"
    android:background="@color/black">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/SV_register"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="PLEASE REGISTER"
                android:id="@+id/TV_pleaseRegister"
                android:layout_centerHorizontal="true"
                android:textColor="#2A679E" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="First Name"
                android:id="@+id/TV_firstName"
                android:layout_below="@+id/TV_pleaseRegister"
                android:layout_marginTop="20dp"
                android:layout_alignParentLeft="true"
                android:textColor="#2A679E" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:textSize="21px"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/ET_FirstName"
                android:layout_below="@+id/TV_firstName"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/gray"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Last Name"
                android:id="@+id/TV_lastName"
                android:layout_below="@+id/ET_FirstName"
                android:layout_marginTop="20dp"
                android:layout_alignParentLeft="true"
                android:textColor="#2A679E" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:textSize="21px"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/ET_LastName"
                android:layout_below="@+id/TV_lastName"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/gray"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="NIC"
                android:id="@+id/TV_nic"
                android:layout_below="@+id/ET_LastName"
                android:layout_marginTop="20dp"
                android:layout_alignParentLeft="true"
                android:textColor="#2A679E" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:textSize="21px"
                android:inputType="none"
                android:ems="10"
                android:id="@+id/ET_NIC"
                android:layout_below="@+id/TV_nic"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/gray"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="User Name"
                android:id="@+id/TV_userName"
                android:layout_below="@+id/ET_NIC"
                android:layout_marginTop="20dp"
                android:layout_alignParentLeft="true"
                android:textColor="#2A679E" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:textSize="21px"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/ET_UserName"
                android:layout_below="@+id/TV_userName"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/gray"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Password"
                android:id="@+id/TV_password"
                android:layout_below="@+id/ET_UserName"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:textColor="#2A679E" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:textSize="21px"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/ET_Password"
                android:layout_below="@+id/TV_password"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/gray"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"

                android:text="Confirm Password"
                android:id="@+id/TV_conpassword"
                android:layout_below="@+id/ET_Password"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:textColor="#2A679E" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:textSize="21px"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/ET_ConPassword"
                android:layout_below="@+id/TV_conpassword"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/gray"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Phone Number"
                android:id="@+id/TV_phoneNo"
                android:layout_below="@+id/ET_ConPassword"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:textColor="#2A679E" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:textSize="21px"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/ET_PhoneNo"
                android:hint="+9471XXXXXXX"
                android:layout_below="@+id/TV_phoneNo"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/gray"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Vehicle Reg No"
                android:id="@+id/TV_regNo"
                android:layout_below="@+id/ET_PhoneNo"
                android:layout_marginTop="20dp"
                android:layout_alignParentLeft="true"
                android:textColor="#2A679E" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:textSize="21px"
                android:inputType="none"
                android:ems="10"
                android:id="@+id/ET_RegNo"
                android:layout_below="@+id/TV_regNo"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/gray"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Select Vehicle Type"
                android:id="@+id/TV_vehicleType"
                android:layout_below="@+id/ET_RegNo"
                android:layout_marginTop="20dp"
                android:layout_alignParentLeft="true"
                android:textColor="#2A679E" />
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="21px"
                android:id="@+id/SP_vehicleType"
                android:layout_below="@+id/TV_vehicleType"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/gray"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="REGISTER"
                android:id="@+id/B_register"
                android:background="@color/darkBlue"
                android:textColor="@color/white"
                android:onClick="onClick"
                android:layout_below="@+id/SP_vehicleType"
                android:layout_marginTop="20dp"
                android:layout_centerVertical="true" />



        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
